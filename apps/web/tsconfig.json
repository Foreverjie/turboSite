{
  "extends": "tsconfig/nextjs.json",
  "compilerOptions": {
    "preserveSymlinks": true,
    "baseUrl": ".",
    "noEmit": true,
    "paths": {
      "~/*": [
        "*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": true,
    "strict": true
  },
  "include": [
    ".",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
